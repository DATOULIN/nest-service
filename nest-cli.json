{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "generateOptions": {
    "spec": false
  },
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./yml/*.yml",
        "outDir": "./dist"
      },
      {
        "include": "../public/**",
        "outDir": "./dist/public"
      },
      {
        "include": "../templates/**",
        "outDir": "./dist/templates"
      }
    ]
  }
}
